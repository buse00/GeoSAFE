<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    xmlns:bootstrapbutton="http://schemas.android.com/tools"
    android:id="@+id/layout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="10"
    android:orientation="vertical">

    <fragment
        android:id="@+id/map"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        class="com.google.android.gms.maps.MapFragment" />

        <TextView

            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:text="9-19 Rue Robert de Flers, 75015 Paris"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#000000"
            android:id="@+id/textAddress"
            android:textSize="@dimen/abc_text_size_large_material"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

     <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:id="@+id/linearLayoutMap"

        android:orientation="horizontal">

         <Button
             android:layout_width="0dp"
             android:layout_height="30dp"
             android:layout_weight="1"
             android:text="Decliner"
             android:textColor="#ffffff"
             android:id="@+id/button_dontGo"
             android:layout_gravity="top|center"
             android:layout_marginLeft="20dp"
             android:layout_marginTop="15dp"
             android:layout_marginRight="20dp"
             android:layout_marginBottom="15dp"
             android:background="@drawable/roundredbutton"
             android:textSize="@dimen/abc_text_size_medium_material"
             />

         <Button
             android:layout_width="0dp"
             android:layout_height="30dp"
             android:layout_weight="1"
             android:text="Accepter"
             android:textColor="#ffffff"
             android:id="@+id/button_go"
             android:layout_gravity="top|center"
             android:layout_marginLeft="20dp"
             android:layout_marginTop="15dp"
             android:layout_marginRight="20dp"
             android:layout_marginBottom="15dp"
             android:background="@drawable/roundgreenbutton"
             android:textSize="@dimen/abc_text_size_medium_material"
             />






    </LinearLayout>

</LinearLayout >

